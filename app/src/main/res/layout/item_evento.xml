<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="17dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_shape_delgado"
        android:padding="17dp">

        <!-- Imagen del evento -->
        <ImageView
            android:id="@+id/ivEventoImagen"
            android:layout_width="103dp"
            android:layout_height="159dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Imagen del evento"
            android:scaleType="centerCrop" />

        <!-- Contenedor de los textos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre del evento -->
            <TextView
                android:id="@+id/tvNombreEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Evento"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/negro_color"
                android:textStyle="bold" />

            <!-- Etiqueta y fecha del evento -->
            <TextView
                android:id="@+id/tvFechaLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Fecha:"
                android:textColor="@color/negro_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFechaEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha del Evento"
                android:textColor="@color/negro_color"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <!-- Etiqueta y ubicación del evento -->
            <TextView
                android:id="@+id/tvUbicacionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ubicación:"
                android:textColor="@color/negro_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUbicacionEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicación del Evento"
                android:textColor="@color/negro_color"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <!-- Etiqueta y descripción del evento -->
            <TextView
                android:id="@+id/tvDescripcionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Descripción:"
                android:textColor="@color/negro_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescripcionEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción breve del evento..."
                android:textColor="@color/negro_color"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
