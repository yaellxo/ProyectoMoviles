<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Evento_Titulo"
        android:layout_width="384dp"
        android:layout_height="61dp"
        android:background="@drawable/border_layout"
        android:fontFamily="@font/sawarabi"
        android:gravity="center"
        android:padding="10dp"
        android:text="Titulo evento"
        android:textColor="@color/color_font_principal"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="16dp" />

    <ScrollView
        android:layout_width="347dp"
        android:layout_height="700dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="104dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="347dp"
                android:layout_height="347dp"
                app:srcCompat="@drawable/advertencia" />

            <Button
                android:id="@+id/btnRecordatorio"
                android:layout_width="268dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:text="Recibir recordatorio"
                android:drawableLeft="@drawable/ic_flecha_32" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>