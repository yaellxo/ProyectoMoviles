<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="354dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_shape"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/HeaderTitle"
            android:layout_width="228dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/sawarabi"
            android:gravity="center"
            android:text="@string/Titulo"
            android:textColor="@color/color_font_principal"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivLogo"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.384" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="74dp"
            android:layout_height="58dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.428" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedorFragment"
        android:layout_width="317dp"
        android:layout_height="662dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/border_shape"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleModificarAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sawarabi"
                android:gravity="center"
                android:text="Modificar"
                android:textColor="@color/color_font_principal"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sawarabi"
                android:text="ID:"
                android:textColor="@color/color_font_principal" />

            <EditText
                android:id="@+id/etIdAdminModificar"
                android:drawableEnd="@drawable/ic_lupa"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/sawarabi"
                android:hint="Escribir código especial."
                android:padding="10dp"
                android:textColor="@color/color_font_principal"
                android:textColorHint="@color/color_font_secundario_gris_medio"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sawarabi"
                android:text="Nombre:"
                android:textColor="@color/color_font_principal" />

            <EditText
                android:id="@+id/etNombreAdminModificar"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/sawarabi"
                android:padding="10dp"
                android:textColor="@color/color_font_principal"
                android:textColorHint="@color/color_font_secundario_gris_medio"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sawarabi"
                android:text="Alias:"
                android:textColor="@color/color_font_principal" />

            <EditText
                android:id="@+id/etAliasAdminModificar"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/sawarabi"
                android:padding="10dp"
                android:textColor="@color/color_font_principal"
                android:textColorHint="@color/color_font_secundario_gris_medio"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sawarabi"
                android:text="Correo:"
                android:textColor="@color/color_font_principal" />

            <EditText
                android:id="@+id/etCorreoAdminModificar"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/sawarabi"
                android:padding="10dp"
                android:textColor="@color/color_font_principal"
                android:textColorHint="@color/color_font_secundario_gris_medio"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sawarabi"
                android:text="Nivel de Acceso:"
                android:textColor="@color/color_font_principal" />

            <Spinner
                android:id="@+id/spNivelAccesoAdminModificar"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:hint="Selecciona tu rango de Cazador."
                android:padding="10dp"
                android:fontFamily="@font/sawarabi"
                android:spinnerMode="dropdown"
                android:background="@drawable/border_layout_spinner"
                android:popupBackground="@color/background"
                android:entries="@array/niveles_acceso"
                android:textSize="12sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sawarabi"
                android:text="Area:"
                android:textColor="@color/color_font_principal" />

            <EditText
                android:id="@+id/etAreaAdminModificar"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/sawarabi"
                android:padding="10dp"
                android:textColor="@color/color_font_principal"
                android:textColorHint="@color/color_font_secundario_gris_medio"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sawarabi"
                android:text="Contraseña:"
                android:textColor="@color/color_font_principal" />

            <EditText
                android:id="@+id/etClaveAdminModificar"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/sawarabi"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/color_font_principal"
                android:textColorHint="@color/color_font_secundario_gris_medio"
                android:textSize="12sp" />

        </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdminModificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:src="@drawable/ic_modificar_admin"
        app:backgroundTint="@color/opcion_modificar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>