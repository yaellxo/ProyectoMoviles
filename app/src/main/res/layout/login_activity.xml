<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título del encabezado -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MangaHub"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <!-- Icono o logo (Placeholder para imagen) -->
        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- Caja para iniciar sesión -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etAlias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribe tu alias shinobi."
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="@android:drawable/edit_text" />

            <EditText
                android:id="@+id/etClave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Inserta tu clave de maestro Pokémon."
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/tvForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Perdiste tu pergamino secreto?"
                android:textSize="14sp"
                android:textColor="#007BFF"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Es hora de la acción!"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Sección para crear cuenta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#EEEEEE"
            android:elevation="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crea tu cuenta y desbloquea todo un universo de historias"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnCreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Elige tu destino ahora!"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
