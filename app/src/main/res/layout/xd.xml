<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Contenedor principal con imágenes de fondo -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Fondo superior -->
        <ImageView
            android:id="@+id/imgBackgroundTop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="top"
            android:contentDescription="Fondo superior"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo_superior" />

        <!-- Fondo inferior -->

        <!-- Contenido principal -->

        <ImageView
            android:id="@+id/imgBackgroundBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:contentDescription="Fondo inferior"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo_inferior" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Encabezado con el título y logo -->
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:fontFamily="sans-serif"
                    android:text="MangaHub"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Logo de MangaHub"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <!-- Caja de inicio de sesión -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:background="@drawable/border_layout"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/etAlias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@android:drawable/edit_text"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Escribe tu alias shinobi."
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/etClave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@android:drawable/edit_text"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Inserta tu clave de maestro Pokémon."
                    android:inputType="textPassword"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tvForgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="¿Perdiste tu pergamino secreto?"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:fontFamily="sans-serif-condensed"
                    android:text="¡Es hora de la acción!"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Sección para crear cuenta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="@drawable/border_layout"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvCreateAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Crea tu cuenta y desbloquea todo un universo de historias"
                    android:textAlignment="center"
                    android:textColor="@color/black1" />

                <Button
                    android:id="@+id/btnCreateAccount"
                    android:layout_width="248dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#000000"
                    android:fontFamily="sans-serif-condensed"
                    android:text="¡Elige tu destino ahora!"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</ScrollView>
