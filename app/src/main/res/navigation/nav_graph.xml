<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/menu_hot"
    android:id="@+id/nav_graph">

<fragment
        android:id="@+id/menu_hot"
        android:name="com.example.proyectomoviles.client.HotScreenFragment"
        android:label="Hot" />
    <fragment
        android:id="@+id/menu_eventos"
        android:name="com.example.proyectomoviles.client.EventScreenFragment"
        android:label="Event Screen"
        tools:layout="@layout/event_activity" >
        <action
            android:id="@+id/action_eventScreenFragment_to_eventoDetalleFragment"
            app:destination="@id/eventoDetalleFragment" />
    </fragment>
    <fragment
        android:id="@+id/menu_busqueda"
        android:name="com.example.proyectomoviles.client.BuscarScreenFragment"
        android:label="Search" />
    <fragment
        android:id="@+id/menu_carrito"
        android:name="com.example.proyectomoviles.client.CarritoScreenFragment"
        android:label="Order" />
    <fragment
        android:id="@+id/menu_perfil"
        android:name="com.example.proyectomoviles.client.PerfilUserScreenFragment"
        android:label="Profile" />
    <fragment
        android:id="@+id/menu_admin"
        android:name="com.example.proyectomoviles.services.PerfilAdminScreenFragment"
        android:label="Admin" />
    <fragment
        android:id="@+id/menu_super_admin"
        android:name="com.example.proyectomoviles.services.PerfilSuperAdminScreenFragment"
        android:label="Admin" />
    <fragment
        android:id="@+id/eventoDetalleFragment"
        android:name="com.example.proyectomoviles.client.EventDetailsFragment"
        android:label="Event Detail"
        tools:layout="@layout/event_detail_activity" />
</navigation>
